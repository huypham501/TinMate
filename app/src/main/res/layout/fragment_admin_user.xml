<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Admin.AdminUserFragment"
    android:background="@drawable/admin_gradient_bg_animation"
    android:id="@+id/admin_user_animated_gradient_bg">

        <EditText android:id="@+id/admin_search_user"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Search by email"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:paddingLeft="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
        android:background="@drawable/admin_search_border"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_manage_user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/admin_search_user"/>

</RelativeLayout>