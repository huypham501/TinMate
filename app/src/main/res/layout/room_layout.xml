<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/border_room_layout">

    <ImageView
        android:id="@+id/imageViewRoom"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:padding="5dp"
        app:srcCompat="@drawable/room_1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textViewRoomName"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/classroom_icon"
        android:text="Phong hoc XSTK"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_alignLeft="@id/imageViewRoom"
        android:layout_below="@id/imageViewRoom"
        android:drawablePadding="10dp"
        android:layout_marginBottom="5dp"
        android:paddingRight="20dp" />

    <TextView
        android:id="@+id/textViewNumberOfMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="100 Thành viên"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/member_icon"
        android:layout_alignLeft="@id/textViewRoomName"
        android:layout_below="@id/textViewRoomName"
        android:drawablePadding="10dp"
        android:layout_marginBottom="5dp" />
</RelativeLayout>